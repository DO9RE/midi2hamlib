#!/bin/bash
# Toggle the selected function according to $last_function and $status_last_function, coming from the function_select script
if [[ ! $last_function || ! $status_last_function ]]; then
  echo "No function selected"
elif [[ $status_last_function == 0 ]]; then
  rigctl -m 2 -r localhost:$port U $last_function 1
elif [[ $status_last_function == 1 ]]; then
  rigctl -m 2 -r localhost:$port U $last_function 0
fi
status_last_function=$(rigctl -m 2 -r localhost:$port u $last_function)
echo "$last_function = $status_last_function"
  

